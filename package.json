{
	"name": "gfm-footnotes",
	"version": "1.0.0",
	"description": "Prune unused footnote references in GitHub-flavored Markdown",
	"bin": "./bin.mjs",
	"main": false,
	"exports": {
		".": "./index.mjs",
		"./package.json": "./package.json"
	},
	"types": "./index.d.mts",
	"scripts": {
		"prepublishOnly": "safe-publish-latest",
		"prepublish": "not-in-publish || npm run prepublishOnly",
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"prelint": "tsc && attw -P",
		"lint": "eslint --ext=mjs,js .",
		"pretest": "npm run lint",
		"tests-only": "c8 tape 'test/**/*.*js'",
		"test": "npm run tests-only",
		"posttest": "npx npm@'>=10.2' audit --production",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/gfm-footnotes.git"
	},
	"keywords": [
		"gfm",
		"markdown",
		"footnote",
		"references",
		"unused"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/gfm-footnotes/issues"
	},
	"homepage": "https://github.com/ljharb/gfm-footnotes#readme",
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.15.4",
		"@ljharb/eslint-config": "^21.1.1",
		"@ljharb/tsconfig": "^0.2.0",
		"@types/es-value-fixtures": "^1.4.4",
		"@types/object-inspect": "^1.13.0",
		"@types/object.groupby": "^1.0.4",
		"@types/tape": "^5.6.4",
		"auto-changelog": "^2.4.0",
		"c8": "^10.1.2",
		"es-value-fixtures": "^1.4.2",
		"eslint": "^8.8.0",
		"npmignore": "^0.3.1",
		"object-inspect": "^1.13.2",
		"safe-publish-latest": "^2.0.0",
		"tape": "^5.8.1",
		"tmp": "^0.2.3",
		"typescript": "^5.7.0-dev.20240903"
	},
	"dependencies": {
		"markdown": "^0.5.0",
		"marked-footnote": "^1.2.4",
		"object.groupby": "^1.0.3"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true
	},
	"publishConfig": {
		"ignore": [
			".github/workflows",
			"test"
		]
	},
	"engines": {
		"node": "^20.17 || >= 22.8"
	}
}
